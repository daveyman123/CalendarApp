@model List<Homepage2.Links>
<h1>Remove Links</h1>
<form method="post">
    @foreach (var cheese in Model)
    {
        <input type="checkbox" name="cheeseIds" id="@cheese.Id" value="@cheese.Id" />
        <label for="@cheese.Id">@cheese.Name</label>
        <br />
    }
    @if (Model.Count == 0)
    {
        <label>no links yet!</label>
    }
    else
    {
        <input type="submit" value="Remove Selected Link(s)" />
    }

</form>